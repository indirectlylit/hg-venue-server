<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Current Data Set</h3>
  </div>
  <div class="panel-body">
    <form role="form" action="#">
      <div class="row">
        <div class="col-xs-6">
          <div class="btn-group">
            <button type="button" class="btn btn-sm js-record" {{^enable_record}}disabled{{/enable_record}}>
               <span class="glyphicon glyphicon-record"></span>
              Record
            </button>
            <button type="button" class="btn btn-sm js-stop" {{^enable_stop}}disabled{{/enable_stop}}>
               <span class="glyphicon glyphicon-stop"></span>
              Stop
            </button>
          </div>
        </div>
        <div class="col-xs-3 recorder-bytesize">
          {{size}}
        </div>
        <div class="col-xs-3">
          <button type="button" class="btn btn-sm pull-right js-reset" {{^enable_reset}}disabled{{/enable_reset}}>
            <span class="glyphicon glyphicon-backward"></span>
            Reset
          </button>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-9">
          <input type="text" class="form-control input-sm js-filename" id="data-file-name" placeholder="Label" value="">
        </div>
        <div class="col-xs-3">
          <button type="button" class="btn btn-default btn-sm pull-right js-save" {{^enable_save}}disabled{{/enable_save}}>
            <span class="glyphicon glyphicon-check"></span>
            Save
          </button>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 recorder-timestamp-help">
          <small>(timestamps are automatically added)</small>
        </div>
      </div>
    </form>
  </div>
</div>