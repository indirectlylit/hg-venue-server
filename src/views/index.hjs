<!DOCTYPE html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Venue Server</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/main.css">

    <script src="js/vendor/modernizr-2.6.2-respond-1.1.0.min.js"></script>
  </head>
  <body>

    <nav class="navbar navbar-default" role="navigation">
      <div class="navbar-text">Venue Server</div>
      <div class="navbar-text navbar-right"><span class="label js-connectionState"></span></div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-md-4 js-serverStats"></div>
        <div class="col-md-8 js-sensorStats"></div>
      </div> <!-- /row -->
      <div class="row">
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Current Data Set</h3>
            </div>
            <div class="panel-body">
              <form role="form">
                <div class="row">
                  <div class="col-xs-6">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm">
                         <span class="glyphicon glyphicon-record"></span>
                        Record
                      </button>
                      <button type="button" class="btn btn-sm">
                         <span class="glyphicon glyphicon-stop"></span>
                        Stop
                      </button>
                    </div>
                  </div>
                  <div class="col-xs-3 lead">
                    0:00
                  </div>
                  <div class="col-xs-3">
                    <button type="button" class="btn btn-sm pull-right">
                      <span class="glyphicon glyphicon-backward"></span>
                      Reset
                    </button>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-9">
                    <input type="text" class="form-control input-sm" id="data-file-name" placeholder="Log Name">
                  </div>
                  <div class="col-xs-3">
                    <button type="button" class="btn btn-default btn-sm pull-right">
                      <span class="glyphicon glyphicon-check"></span>
                      Save
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div> <!-- /panel -->
        </div> <!-- /col -->
        <div class="col-md-8">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Saved Data</h3>
            </div>
            <div class="panel-body">
              <table class="table table-condensed">
                <thead>
                  <td>Time</td>
                  <td>File Name</td>
                  <td>Size</td>
                </thead>
                <tbody class="js-fileTable"></tbody>
              </table>
            </div>
          </div> <!-- /panel -->
        </div> <!-- /col -->
      </div> <!-- /row -->
    </div> <!-- /container -->

<!-- templates -->
{{#templateData}}
<script type="text/template" id="{{id}}">
{{{contents}}}
</script>
{{/templateData}}

    <!-- vendor -->
    <script src="/js/vendor/jquery-1.10.1.js"></script>
    <script src="/js/vendor/lodash.min.js"></script>
    <script src="/js/vendor/hogan.min.js"></script>
    <script src="/js/vendor/bootstrap.js"></script>
    <script src="/js/vendor/backbone.js"></script>
    <script src="/js/vendor/backbone.viewmaster.js"></script>
    <script src="/js/vendor/sockjs-0.3.4.js"></script>
    <script src="/js/vendor/bootstrap.js"></script>
    <script src="/js/vendor/bootstrap-lightbox.js"></script>

    <!-- models -->
    <script src="/js/models/settings.js"></script>

    <!-- views -->
    <script src="/js/views/settings.js"></script>

    <!-- application -->
    <script src="/js/ctrl.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/websocket.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
