#! /bin/sh
# /etc/init.d/venueserver

### BEGIN INIT INFO
# Provides:          venueserver
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Simple script to start the venue server
# Description:       Thanks www.stuffaboutcode.com for the template
### END INIT INFO

mkdir -p /var/log/venueserver

# Carry out specific functions when asked to by the system
case "$1" in
  start)
    echo "Starting venue-server"
    start-stop-daemon --start --chdir /var/log/venueserver --startas /usr/local/bin/node --name venueserver --background -- /home/pi/venue-server/venue-server/src/app >> /var/log/venueserver.log 2>&1&
    ;;
  *)
    echo "Usage: /etc/init.d/venue-server {start}"
    exit 1
    ;;
esac

exit 0